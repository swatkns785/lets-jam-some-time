<div class="row">
  <div class="large-12 columns">

    <!-- Top Text Section -->

    <div class="row">
      <div class="row homepagebuffer-large">
        &nbsp;
      </div>
      <div class="large-12 columns hide-for-small homepage-header">
        <div id="headertextlarge-container">
          <%= image_tag('logo-nodrop.png') %>
        </div>
        <p class="subheadertextlarge">find musicians near you</p>
        <% if !current_user %>
        <div id="index-signin-button-container-large">
          <div><%= link_to image_tag('btn-connect-sc-l.png'), "/auth/soundcloud" %></div>
        </div>
        <% end %>
      </div>
    </div>

    <!-- End Top Text Section -->


    <!-- Mobile Header -->


    <div class="row">
      <div class="row homepagebuffer-small">
        &nbsp;
      </div>
      <div class="small-12 show-for-small homepage-header"><br>
        <div id="headertextsmall-container">
          <%= image_tag('logo-nodrop.png') %>
          <%= image_tag('rails_vs_sinatra_info.png') %>
        </div>
        <p class="subheadertextsmall">find musicians near you</p>
        <% if !current_user %>
        <div id="index-signin-button-container-large">
          <%= link_to image_tag('btn-connect-sc-s.png'), "/auth/soundcloud" %>
        </div>
        <% end %>
      </div>
    </div>


    <!-- End Mobile Header -->

  </div>
</div><br>

<!-- Search Bar -->

<div class="row">

  <div class="large-12 columns">
    <div class="radius panel">

      <!-- <form> -->
        <div class="row collapse">

          <%= form_tag(jamsessions_path, method: :get) do %>
          <div class="large-10 small-8 columns">
            <%= text_field_tag :query %>
          </div>
          <div class="large-2 small-3 columns">
            <%if current_user %>
            <%= submit_tag "Search", class: "postfix button expand", id: "homepage-search-button-sign-in", name: nil %>
            <% else %>
            <%= submit_tag "Search", class: "postfix button expand", id: "homepage-search-button", name: nil %>
            <% end %>
            <% end %>
          </div>
        </div>
      <!-- </form> -->

    </div>
  </div>

</div>

<!-- End Search Bar -->
